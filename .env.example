# Required
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
EMAIL_USER=you@example.com
EMAIL_PASS=your_email_app_password
FLASK_SECRET_KEY=change_this_secret

# Optional admin session auth (set either ADMIN_PASSWORD or ADMIN_PASSWORD_HASH)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_PASSWORD_HASH=
ADMIN_SESSION_TIMEOUT=

# Optional legacy bearer token for API access
ADMIN_TOKEN=

# Session cookie hardening (set to True in production over HTTPS)
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax

# Database location (defaults to data.db if unset)
DATA_DB=

# Local debug toggle
FLASK_DEBUG=1
